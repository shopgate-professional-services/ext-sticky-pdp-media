{
  "version": "1.0.0-rc.1",
  "id": "@shopgate-project/sticky-pdp-media",
  "components": [
    {
      "id": "StickyMedia",
      "path": "frontend/portals/StickyMedia/index.jsx",
      "target": "component.product-media-section",
      "type": "portals"
    }
  ],
  "configuration": {
    "scrolledTopOffset": {
      "type": "admin",
      "destination": "frontend",
      "default": "-100vw",
      "params": {
        "label": "CSS value for 'top' property. It will move the image by this value to top when scrolled",
        "type": "text",
        "required": true
      }
    },
    "scrollStyles": {
      "type": "admin",
      "destination": "frontend",
      "default": {
        "enabled": true,
        "ratio": 0.6,
        "styles": null
      },
      "params": {
        "label": "Apply given styles when scroll ratio is reached (bottom shadows, etc.)",
        "type": "json"
      }
    }
  },
  "steps": []
}
